@model IEnumerable<DrivingSchool.Models.Testimonial>

@{
    ViewData["Title"] = "Testimonials";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Testimonial Start -->
<div class="container-xxl py-6">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <h6 class="text-primary text-uppercase mb-2">Testimonial</h6>
            <h1 class="display-6 mb-4">What Our Clients Say!</h1>
        </div>
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="container">
                <div class="row">
                    @foreach (var student in Model)
                    {
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <img class="card-img-top" src="@student.ImageUrl" alt="@student.StudentName" />
                                <div class="card-body">
                                    <h5 class="card-title">@student.StudentName</h5>
                                    <p class="card-text">@student.FeedBackMessage</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial End -->