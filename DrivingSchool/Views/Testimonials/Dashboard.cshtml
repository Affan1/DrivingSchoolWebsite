@{
}
@model IEnumerable<DrivingSchool.Models.Testimonial>

@{
    ViewData["Title"] = "Testimonials Dashboard";
}

<h2>Testimonials Dashboard</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Add New Testimonial</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Student Name</th>
            <th>Feedback</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="80" height="80" style="object-fit:cover;" />
                    }
                </td>
                <td>@item.StudentName</td>
                <td>@item.FeedBackMessage</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TestimonialId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.TestimonialId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
