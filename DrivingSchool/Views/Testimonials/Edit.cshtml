@model DrivingSchool.Models.Testimonial

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Testimonial</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TestimonialId" />
            <div class="form-group">
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeedBackMessage" class="control-label"></label>
                <input asp-for="FeedBackMessage" class="form-control" />
                <span asp-validation-for="FeedBackMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Current Image</label><br />

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl"
                         alt="Testimonial Image"
                         style="max-width:200px; border-radius:8px; margin-bottom:10px;" />
                }
            </div>

            <div class="form-group">
                <label>Replace Image</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
            </div>

            <input type="hidden" asp-for="ImageUrl" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
